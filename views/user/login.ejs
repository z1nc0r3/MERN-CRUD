<%- include('../partials/head') %> <%- include('../partials/header') %>

<main class="my-form pt-5">
	<div class="cotainer">
		<div class="row justify-content-center m-0">
			<div class="col-md-4">
				<div class="card">
					<div class="card-header text-center h5">Login</div>
					<div class="card-body">
						<form name="my-form" action="/login" method="POST">
							<div class="form-group row pb-3">
								<label for="email_address" class="col-md-4 col-form-label text-md-right">Email Address</label>
								<div class="col-md-8">
									<input class="form-control" id="email" name="email" type="mail" value="" required />
								</div>
							</div>

							<div class="form-group row pb-5">
								<label for="present_address" class="col-md-4 col-form-label text-md-right">Password</label>
								<div class="col-md-8">
									<input class="form-control" id="password" name="password" value="" type="password" required />
								</div>
							</div>

							<div class="col-md-12 text-center">
								<button type="submit" class="btn btn-primary">Login</button>
							</div>

							<!-- login error message -->
							<% if (message.length > 0) { %>
							    <div class="alert alert-danger mt-3" role="alert"><%- message %></div>
							<% } %>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>

<%- include('../partials/foot') %> <%- include('../partials/footer') %>
